<a:screen xmlns:a="http://www.aurora-framework.org/application">
    <a:init-procedure/>
    <a:view>
        <a:link id="acp7070_consign_web_invoice_detail_link" url="${/request/@context_path}/modules/acp/ACP7070/acp_consign_web_invoice_detail.screen"/>
        <a:link id="acp7070_operation_record_link" url="${/request/@context_path}/modules/acp/PUBLIC/acp_operation_record.screen"/>
        <script><![CDATA[
            function acp7070Query() {
                $('acp7070_consign_web_invoice_result_ds').query();
            }
            
            function acp7070ConsignWebInvoiceResultRender(value, rec, name) {
                var invoice_header_id = rec.get('invoice_header_id');
                if (name == 'invoice_num') {
                    return '<a href="javascript:acp7070ConsignWebInvoiceDetail(' + invoice_header_id + ')">' + value + '</a>';
                } else if (name == 'operation_record') {
                    return '<a href="javascript:acp7070OperationRecord(' + invoice_header_id + ')">操作记录</a>';
                }
            }
            
            function acp7070ConsignWebInvoiceDetail(invoice_header_id) {
                new Aurora.Window({
                    id: 'acp7070_consign_web_invoice_detail_window',
                    title: '寄销网上发票明细',
                    url: $('acp7070_consign_web_invoice_detail_link').getUrl() + '?invoice_header_id=' + invoice_header_id,
                    fullScreen: true
                }).on('beforeclose', function() {
                    acp7070Query();
                });
            }
            
            function acp7070OperationRecord(invoice_header_id) {
                new Aurora.Window({
                    id: 'acp7070_operation_record_window',
                    title: '操作记录',
                    url: $('acp7070_operation_record_link').getUrl() + '?operation_table=ACP_CSGN_WEB_INVOICE_HDS&operation_table_id=' + invoice_header_id,
                    height: 450,
                    width: 600
                });
            }
        ]]></script>
        <a:dataSets>
            <a:dataSet id="acp7070_consign_web_invoice_query_ds">
                <a:fields>
                    <a:field name="company_desc" autoComplete="true" autoCompleteField="company_full_name" lovGridHeight="320" lovHeight="500" lovService="public.fnd_companies_lov" lovWidth="500" title="公司">
                        <a:mapping>
                            <a:map from="company_id" to="company_id"/>
                            <a:map from="company_full_name" to="company_desc"/>
                        </a:mapping>
                    </a:field>
                </a:fields>
            </a:dataSet>
            <a:dataSet id="acp7070_consign_web_invoice_result_ds" autoCount="true" autoPageSize="true" model="acp.ACP7070.acp_consign_web_invoice_query" queryDataSet="acp7070_consign_web_invoice_query_ds" selectable="true"/>
        </a:dataSets>
        <a:defaultScreen>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton bind="acp7070_consign_web_invoice_result_grid" type="excel" width="100"/>
            </a:screenTopToolbar>
            <a:queryForm bindTarget="acp7070_consign_web_invoice_query_ds" resultTarget="acp7070_consign_web_invoice_result_ds" style="width:100%;border:none">
                <a:formToolBar labelWidth="100">
                    <a:textField name="bill_number_from" bindTarget="acp7070_consign_web_invoice_query_ds" prompt="开票单编号从">
                        <a:events>
                            <a:event name="enterdown" handler="acp7070Query"/>
                        </a:events>
                    </a:textField>
                    <a:textField name="bill_number_to" bindTarget="acp7070_consign_web_invoice_query_ds" prompt="开票单编号至">
                        <a:events>
                            <a:event name="enterdown" handler="acp7070Query"/>
                        </a:events>
                    </a:textField>
                    <a:lov name="company_desc" bindTarget="acp7070_consign_web_invoice_query_ds" prompt="公司">
                        <a:events>
                            <a:event name="enterdown" handler="acp7070Query"/>
                        </a:events>
                    </a:lov>
                </a:formToolBar>
                <a:formBody>
                    <a:hBox labelWidth="100">
                        <a:vBox labelWidth="100">
                            <a:textField name="po_num_from" bindTarget="acp7070_consign_web_invoice_query_ds" prompt="采购订单号从">
                                <a:events>
                                    <a:event name="enterdown" handler="acp7070Query"/>
                                </a:events>
                            </a:textField>
                        </a:vBox>
                        <a:vBox labelWidth="100">
                            <a:textField name="po_num_to" bindTarget="acp7070_consign_web_invoice_query_ds" prompt="采购订单号至">
                                <a:events>
                                    <a:event name="enterdown" handler="acp7070Query"/>
                                </a:events>
                            </a:textField>
                        </a:vBox>
                    </a:hBox>
                </a:formBody>
            </a:queryForm>
            <a:grid id="acp7070_consign_web_invoice_result_grid" bindTarget="acp7070_consign_web_invoice_result_ds" marginHeight="130" marginWidth="50" navBar="true">
                <a:columns>
                    <a:column name="invoice_num" align="left" prompt="网上发票编号" renderer="acp7070ConsignWebInvoiceResultRender" sortable="true" width="80"/>
                    <a:column name="company_code" align="left" prompt="公司编码" sortable="true" width="60"/>
                    <a:column name="company_desc" align="left" prompt="公司名称" sortable="true" width="100"/>
                    <a:column name="vendor_site_desc" align="left" prompt="供应商地点" sortable="true" width="60"/>
                    <a:column name="currency_code" align="left" prompt="币种" sortable="true" width="60"/>
                    <a:column name="invoice_amount_system" align="right" prompt="含税总额(系统)" sortable="true" width="80"/>
                    <a:column name="invoice_tax_amount_system" align="right" prompt="税额(系统)" sortable="true" width="80"/>
                    <a:column name="invoice_amount" align="right" prompt="发票总额" sortable="true" width="80"/>
                    <a:column name="invoice_tax_amount" align="right" prompt="发票税额" sortable="true" width="80"/>
                    <a:column name="tax_invoice_num" align="left" prompt="税务发票号" sortable="true" width="60"/>
                    <a:column name="status_desc" align="left" prompt="状态" sortable="true" width="60"/>
                    <a:column name="creation_date" align="center" prompt="创建日期" renderer="Aurora.formatDate" sortable="true" width="60"/>
                    <a:column name="approved_date" align="center" prompt="审核日期" renderer="Aurora.formatDate" sortable="true" width="60"/>
                    <a:column name="operation_record" align="center" prompt="操作记录" renderer="acp7070ConsignWebInvoiceResultRender" sortable="true" width="60"/>
                    <a:column name="data_source" align="left" prompt="数据来源" sortable="true" width="60"/>
                </a:columns>
            </a:grid>
        </a:defaultScreen>
    </a:view>
</a:screen>
